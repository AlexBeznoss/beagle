<div class="border-b border-grey-lighter py-6 flex justify-between lg:py-12">
  <div class="hidden sm:block">
    <%= image_tag "logo.svg", alt: "logo", class: "w-96" %>
  </div>
  <div class="ml-3">
    <h1 class="pt-3 font-body text-4xl font-semibold text-primary dark:text-white md:text-5xl lg:text-6xl">
      <a href="/">BeagleJobs</a>
    </h1>
    <p class="pt-3 font-body text-xl font-light text-primary dark:text-white">
      Accurate list of Remote Ruby jobs from 
      <%= link_to "RubyJobBoard", provider_url("rubyjobboard"), target: "_blank" %>, 
      <%= link_to "GoRails Jobs", provider_url("gorails"), target: "_blank" %>, 
      <%= link_to "RemoteOK", provider_url("remoteok"), target: "_blank" %> 
      and <%= link_to "RubyOnRemote", provider_url("rubyonremote"), target: "_blank" %>.
    </p>
  </div>
</div>

<div class="py-6 pb-16 lg:pb-20 lg:py-12 min-h-[60vh]">
  <%= form_for :search, method: :get, url: search_path, class: "flex flex-row pb-6 lg:pb-12" do |f| %>
    <%= f.text_field :q,
      placeholder: "Search by job title, company, location...",
      value: params.dig(:search, :q),
      class: "w-full border border-primary bg-grey-lightest px-5 py-4 font-body font-light text-primary placeholder-primary transition-colors focus:border-secondary focus:outline-none focus:ring-2 focus:ring-secondary dark:border-secondary" %>
    <%= button_tag data: {"disable-with" => "Loading..."}, type: "submit", class: "mt-0 bg-secondary px-6 py-2 font-body text-2xl font-semibold text-white hover:bg-green" do %>
      <i class="bx bx-search"></i>
    <% end %>
  <% end %>

  <%= turbo_frame_tag "job_posts" do %>
    <% if @job_posts.any? %>
      <%= render @job_posts %>
    <% else %>
      <%= render partial: "/job_posts/not_found" %>
    <% end %>
  <% end %>

  <%= turbo_frame_tag "job_posts_pagination" do %>
    <%= render partial: "/job_posts/pagination", locals: { pagy: @pagy } %>
  <% end %>
</div>
